{{!-- search bar --}}
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        {{!-- 本來想用按鈕切換模式，但現在些算了 --}}
        {{!-- <h4 class="mb-2 d-inline color: #9b4b4b"><button class="btn btn-outline-success me-2"
            type="button">尋找餐廳</button></h4> --}}
        <h4 class="mb-2 d-inline color: #9b4b4b">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名稱(中、英文皆可)"
            aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
      {{!-- add a restaurant --}}
      <form action="/create" class="mt-3">
        {{!-- <h4 class="mb-2 d-inline color: #9b4b4b"><button class="btn btn-outline-primary"
            type="button">新增餐廳</button>
        </h4> --}}
        <h4 class="mb-2 d-inline color: #9b4b4b">新增餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名稱" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="add-button"><i class="fas fa-plus-circle"></i></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

{{!-- restaurant list --}}
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{ this._id }}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
              </div>
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{ this.rating }}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </div>
        </a>
        <ul class="d-flex justify-content-end">
          <li class="list-unstyled">
            <a href="./todos/">detail</a>
            <a href="./todos/{{ this._id }}/edit">edit</a>
            <form action="./todos/{{ this._id }}/delete" method="POST" style="display: inline;">
              <button type="submit">delete</button>
            </form>
          </li>
        </ul>
        {{/each}}
      </div>
    </div>
  </div>
</div>